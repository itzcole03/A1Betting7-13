# A1Betting Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
A1BETTING_APP_NAME=A1Betting Enhanced Backend
A1BETTING_VERSION=2.0.0
A1BETTING_DEBUG=false
A1BETTING_ENVIRONMENT=production

# API Settings
A1BETTING_API_HOST=0.0.0.0
A1BETTING_API_PORT=8000
A1BETTING_API_WORKERS=4
A1BETTING_API_TIMEOUT=30
A1BETTING_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Database Settings
A1BETTING_DATABASE_URL=postgresql://username:password@localhost:5432/a1betting
A1BETTING_REDIS_URL=redis://localhost:6379
A1BETTING_POSTGRES_HOST=localhost
A1BETTING_POSTGRES_PORT=5432
A1BETTING_POSTGRES_DB=a1betting
A1BETTING_POSTGRES_USER=postgres
A1BETTING_POSTGRES_PASSWORD=your_postgres_password

# Enhanced Mathematical Engine Settings
A1BETTING_ENABLE_NEUROMORPHIC=true
A1BETTING_ENABLE_MAMBA=true
A1BETTING_ENABLE_CAUSAL_INFERENCE=true
A1BETTING_ENABLE_TOPOLOGICAL=true
A1BETTING_ENABLE_RIEMANNIAN=true
A1BETTING_ENABLE_GPU_ACCELERATION=false
A1BETTING_DEFAULT_PRECISION=float32
A1BETTING_CONVERGENCE_TOLERANCE=1e-6

# External API Keys
A1BETTING_SPORTRADAR_API_KEY=your_sportradar_api_key_here
A1BETTING_ODDS_API_KEY=your_odds_api_key_here
A1BETTING_PRIZEPICKS_API_KEY=your_prizepicks_api_key_here

# Rate Limiting
A1BETTING_RATE_LIMIT_REQUESTS=1000
A1BETTING_RATE_LIMIT_WINDOW=60

# Caching
A1BETTING_CACHE_TTL=3600
A1BETTING_CACHE_MAX_SIZE=10000

# ML Model Settings
A1BETTING_MODEL_PATH=./models
A1BETTING_MODEL_UPDATE_INTERVAL=3600
A1BETTING_ENSEMBLE_WEIGHTS_XGBOOST=0.3
A1BETTING_ENSEMBLE_WEIGHTS_LIGHTGBM=0.3
A1BETTING_ENSEMBLE_WEIGHTS_RANDOM_FOREST=0.2
A1BETTING_ENSEMBLE_WEIGHTS_NEURAL_NET=0.2

# Enhanced Prediction Engine Settings
A1BETTING_BAYESIAN_SAMPLES=1000
A1BETTING_GAUSSIAN_PROCESS_LENGTH_SCALE=1.0
A1BETTING_INFORMATION_THEORY_BINS=10
A1BETTING_STATISTICAL_MECHANICS_BETA=1.0

# Enhanced Feature Engineering Settings
A1BETTING_WAVELET_TYPE=morlet
A1BETTING_WAVELET_SCALES=32
A1BETTING_MANIFOLD_NEIGHBORS=10
A1BETTING_MANIFOLD_METHOD=isomap
A1BETTING_EMD_MAX_IMFS=8

# Enhanced Risk Management Settings
A1BETTING_EXTREME_VALUE_THRESHOLD=0.95
A1BETTING_COPULA_TYPE=gaussian
A1BETTING_STRESS_TEST_SCENARIOS=100
A1BETTING_MONTE_CARLO_SIMULATIONS=10000

# Enhanced Data Pipeline Settings
A1BETTING_ANOMALY_CONTAMINATION=0.1
A1BETTING_KALMAN_PROCESS_NOISE=0.01
A1BETTING_KALMAN_MEASUREMENT_NOISE=0.1
A1BETTING_MISSING_DATA_THRESHOLD=0.5

# Monitoring Settings
A1BETTING_METRICS_ENABLED=true
A1BETTING_PROMETHEUS_PORT=9090
A1BETTING_HEALTH_CHECK_INTERVAL=30

# Logging Settings
A1BETTING_LOG_LEVEL=INFO
A1BETTING_LOG_FORMAT=json
A1BETTING_LOG_FILE=/var/log/a1betting/app.log

# Security Settings
A1BETTING_SECRET_KEY=your-super-secret-key-change-in-production
A1BETTING_JWT_ALGORITHM=HS256
A1BETTING_JWT_EXPIRATION=3600

# Performance Settings
A1BETTING_WORKER_PROCESSES=4
A1BETTING_WORKER_CONNECTIONS=1000
A1BETTING_KEEPALIVE_TIMEOUT=2
A1BETTING_MAX_REQUEST_SIZE=100MB

# Mathematical Computation Settings
A1BETTING_NEUROMORPHIC_TIMESTEPS=100
A1BETTING_NEUROMORPHIC_NEURONS=1000
A1BETTING_MAMBA_SEQUENCE_LENGTH=50
A1BETTING_MAMBA_STATE_SIZE=64
A1BETTING_CAUSAL_SIGNIFICANCE_LEVEL=0.05
A1BETTING_CAUSAL_MAX_ITER=1000
A1BETTING_TOPOLOGICAL_MAX_DIMENSION=2
A1BETTING_TOPOLOGICAL_PERSISTENCE_THRESHOLD=0.1
A1BETTING_RIEMANNIAN_MANIFOLD_DIM=16
A1BETTING_RIEMANNIAN_GEODESIC_STEPS=100

# Numerical Libraries Configuration
A1BETTING_NUMPY_THREADS=4
A1BETTING_SCIPY_THREADS=4
A1BETTING_SKLEARN_JOBS=-1
A1BETTING_GUDHI_MAX_SIMPLICES=10000
A1BETTING_NETWORKX_BACKEND=default

# Model Training Settings
A1BETTING_TRAINING_BATCH_SIZE=32
A1BETTING_TRAINING_EPOCHS=100
A1BETTING_TRAINING_LEARNING_RATE=0.001
A1BETTING_TRAINING_VALIDATION_SPLIT=0.2
A1BETTING_TRAINING_EARLY_STOPPING_PATIENCE=10

# Backup and Recovery
A1BETTING_BACKUP_ENABLED=true
A1BETTING_BACKUP_INTERVAL=86400
A1BETTING_BACKUP_RETENTION_DAYS=30
A1BETTING_BACKUP_LOCATION=/backups/a1betting

# Deployment Settings
A1BETTING_CONTAINER_NAME=a1betting-backend
A1BETTING_CONTAINER_PORT=8000
A1BETTING_HOST_PORT=8000
A1BETTING_RESTART_POLICY=unless-stopped

# Development Settings
A1BETTING_DEV_RELOAD=true
A1BETTING_DEV_DEBUG_SQL=false
A1BETTING_DEV_PROFILING=false
A1BETTING_DEV_MOCK_EXTERNAL_APIS=false

# Testing Settings
A1BETTING_TEST_DATABASE_URL=postgresql://test:test@localhost:5432/a1betting_test
A1BETTING_TEST_REDIS_URL=redis://localhost:6379/1
A1BETTING_TEST_PARALLEL_WORKERS=4

# Feature Flags
A1BETTING_FEATURE_ENHANCED_PREDICTION=true
A1BETTING_FEATURE_REVOLUTIONARY_ENGINE=true
A1BETTING_FEATURE_REAL_TIME_PROCESSING=true
A1BETTING_FEATURE_BATCH_PROCESSING=true
A1BETTING_FEATURE_MODEL_VERSIONING=true
A1BETTING_FEATURE_A_B_TESTING=false

# Monitoring and Alerting
A1BETTING_SENTRY_DSN=your_sentry_dsn_here
A1BETTING_PROMETHEUS_ENABLED=true
A1BETTING_GRAFANA_ENABLED=true
A1BETTING_ALERT_EMAIL=admin@yourdomain.com
A1BETTING_ALERT_SLACK_WEBHOOK=your_slack_webhook_url

# Resource Limits
A1BETTING_MAX_MEMORY_GB=8
A1BETTING_MAX_CPU_CORES=4
A1BETTING_MAX_GPU_MEMORY_GB=4
A1BETTING_MAX_DISK_SPACE_GB=100
A1BETTING_MAX_CONCURRENT_PREDICTIONS=50

# Quality Assurance
A1BETTING_QA_ENABLE_VALIDATION=true
A1BETTING_QA_CONFIDENCE_THRESHOLD=0.8
A1BETTING_QA_ACCURACY_THRESHOLD=0.85
A1BETTING_QA_LATENCY_THRESHOLD_MS=5000
A1BETTING_QA_ERROR_RATE_THRESHOLD=0.05
